<p style="color: green"><%= notice %></p>

<h4><b>Tweets</b></h4>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
  <%=raw pagy_nav(@pagy) %>
</div>

<%= link_to "New tweet", new_tweet_path, class:"btn btn-outline-primary my-3" %>
